<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="#333333"
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_above="@id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本内容"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:text="请购单号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_reqest"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:text="请购人"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:text="关联订单号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="关联生产单号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_produce"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="款号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请购时间"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_333"
                        android:textSize="16sp"
                        android:text="请购内容"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="请购项"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />



                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="请购数量"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />

                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="码数"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />

                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="供应商"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />
                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="采购数量"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />
                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="单价"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />
                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="总价"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />
                                <TextView
                                    android:background="#f3f3f3"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="操作"
                                    android:textColor="@color/color_333"
                                    android:textSize="13sp" />
                            </LinearLayout>
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/lv_ask"
                                tools:listitem="@layout/item_buy_submit"
                                android:divider="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:id="@+id/rl_size"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_item2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="付款方式"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/tv_item2"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_pay"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="采购人垫付"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:text="备注"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/tv_remark"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:text=""
                            android:textColor="@color/color_999"
                            android:textSize="14sp" />

                    </RelativeLayout>
                    <EditText
                        android:id="@+id/et_remark"
                        android:layout_marginTop="15dp"
                        android:textColorHint="#9999"
                        android:textSize="14sp"
                        android:hint="请输入备注"
                        android:gravity="left"
                        android:padding="15dp"
                        android:background="@drawable/bg_add_customer"

                        android:layout_width="match_parent"
                        android:layout_height="140dp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <TextView
            android:background="@color/color_blue"
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_submit"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>