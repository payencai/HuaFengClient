<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.client.AddCustomerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="16sp"
            android:text="新建订单"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/tv_add"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_client"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item1"
                        android:textColor="@color/color_333"
                        android:text="客户"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item1"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_client"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>


                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_product"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item2"
                        android:textColor="@color/color_333"
                        android:text="产品"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item2"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_product"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>


                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item3"
                        android:textColor="@color/color_333"
                        android:text="单价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:inputType="phone"
                        android:id="@+id/et_price"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_item3"
                        android:paddingRight="15dp"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入单价"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item4"
                        android:textColor="@color/color_333"
                        android:text="数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:inputType="number"
                        android:id="@+id/et_number"
                        android:layout_marginLeft="60dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_item4"
                        android:paddingRight="15dp"
                        android:gravity="right|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入数量"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item5"
                        android:textColor="@color/color_333"
                        android:text="尺码明细"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.MyGridView

                        android:id="@+id/gv_size"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:numColumns="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.huafeng.client.view.MyGridView>

                </LinearLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_addr"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item6"
                        android:textColor="@color/color_333"
                        android:text="收货地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item6"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_address"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择地址"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333"
                        android:text="备注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/et_remark"
                        android:textColorHint="#9999"
                        android:textSize="14sp"
                        android:hint="请输入备注"
                        android:gravity="left"
                        android:padding="15dp"
                        android:background="@drawable/bg_add_customer"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/tv_add"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="下一步"
            android:background="@drawable/bg_per_login"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </RelativeLayout>
</LinearLayout>