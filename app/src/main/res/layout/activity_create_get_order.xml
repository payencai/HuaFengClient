<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.client.AddCustomerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="16sp"
            android:text="取货单"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item7"
                    android:textColor="@color/color_333"
                    android:text="取货单号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.huafeng.client.view.CursorEditText
                    android:singleLine="true"
                    android:id="@+id/et_no"
                    android:layout_marginLeft="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_item7"
                    android:paddingRight="15dp"
                    android:gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_333"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:background="@null"
                    android:hint="请输入取货单号"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_time"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item2"
                    android:textColor="@color/color_333"
                    android:text="取货时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_item2"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_time"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="请选择取货时间"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_supplier"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item3"
                    android:textColor="@color/color_333"
                    android:text="供应商"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_item3"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="请选择"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_item1"
                android:textColor="@color/color_333"
                android:text="数量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_num"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/color_333"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="工序"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_process"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/color_333"
                    android:text="工序1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>



            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText

                    android:id="@+id/et_remark"
                    android:textColorHint="#9999"
                    android:textSize="14sp"
                    android:hint="请输入备注"
                    android:gravity="left"
                    android:padding="15dp"
                    android:background="@drawable/bg_add_customer"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="确认"
            android:background="@drawable/bg_per_login"
            android:layout_width="200dp"
            android:layout_height="45dp" />
    </RelativeLayout>
</LinearLayout>