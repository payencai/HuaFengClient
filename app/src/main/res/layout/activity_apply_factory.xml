<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.start.activity.ApplyFactoryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="18sp"
            android:text="加入工厂"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <ScrollView
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"

            android:layout_above="@id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_factory"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item1"
                    android:textColor="@color/color_333"
                    android:text="工厂"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_item1"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_factory"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="请选择"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item2"
                    android:textColor="@color/color_333"
                    android:text="真实姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.huafeng.client.view.CursorEditText

                    android:id="@+id/et_name"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_item2"
                    android:paddingRight="10dp"
                    android:gravity="end|center_vertical"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_333"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />


            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_sex"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item3"
                    android:textColor="@color/color_333"
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_item3"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_sex"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="请选择"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item4"
                    android:textColor="@color/color_333"
                    android:text="联系方式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.huafeng.client.view.CursorEditText
                    android:inputType="phone"
                    android:id="@+id/et_phone"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_item4"
                    android:paddingRight="10dp"
                    android:gravity="end|center_vertical"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_333"
                    android:textColorHint="#ccc"
                    android:textSize="14sp"
                    android:background="@null"
                    android:hint="请输入联系方式"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_city"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item5"
                    android:textColor="@color/color_333"
                    android:text="所在地"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_item5"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_address"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="请选择"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_mark"
                    android:textColorHint="#9999"
                    android:textSize="14sp"
                    android:hint="请输入备注"
                    android:gravity="left"
                    android:padding="15dp"
                    android:background="@drawable/bg_add_customer"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />
            </LinearLayout>


            <TextView
                android:layout_marginBottom="20dp"
                android:id="@+id/tv_add"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="提交申请"
                android:background="@drawable/bg_per_login"
                android:layout_width="200dp"
                android:layout_height="45dp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>