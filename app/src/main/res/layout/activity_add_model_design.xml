<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.client.AddCustomerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="16sp"
            android:text="创建任务"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_above="@id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_above="@id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_prefixs"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item1"
                        android:textColor="@color/color_333"
                        android:text="制版号标头"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item1"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_prefixs"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>


                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item2"
                        android:textColor="@color/color_333"
                        android:text="制版号预览"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_marginRight="15dp"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_999"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_client"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item3"
                        android:textColor="@color/color_333"
                        android:text="客户"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item3"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_client"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_designer"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item4"
                        android:textColor="@color/color_333"
                        android:text="设计师"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item4"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_designer"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333"
                        android:text="设计要求"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/et_content"
                        android:textColorHint="#9999"
                        android:textSize="14sp"
                        android:hint="请输入设计要求"
                        android:gravity="left"
                        android:padding="15dp"
                        android:background="@drawable/bg_add_customer"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="140dp" />
                </LinearLayout>
                <com.huafeng.client.view.selectimage.EvaluationChoiceImageView
                    android:id="@+id/addimgs"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.huafeng.client.view.selectimage.EvaluationChoiceImageView>

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_above="@id/tv_add"
            android:id="@+id/view"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <TextView
            android:id="@+id/tv_add"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#2D5FE1"
            android:textSize="16sp"
            android:text="确认创建"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </RelativeLayout>
</LinearLayout>