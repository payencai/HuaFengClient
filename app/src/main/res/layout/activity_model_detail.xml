<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.design.DesignDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:text="提交"
            android:textColor="#2D5FE1"
            android:textSize="14sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本信息"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="图片"
                    android:textColor="@color/color_666"
                    android:textSize="14sp" />

                <com.huafeng.client.view.MyGridView
                    android:id="@+id/gv_photo"
                    android:horizontalSpacing="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="3"
                   >

                </com.huafeng.client.view.MyGridView>

                <RelativeLayout
                    android:id="@+id/rl_style"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_item1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="款式"
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item1"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_style"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE1E6"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="颜色"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/tv_item3"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#999"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE1E6"></View>

                <RelativeLayout
                    android:id="@+id/rl_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_item2"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="尺码"
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item2"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_size"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE1E6"></View>

                <RelativeLayout
                    android:id="@+id/rl_zhi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_item5"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="纸样编号"
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item5"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_zhi"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_item4"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="纸样编号"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_bianhao"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item4"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请输入纸样编号"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE1E6"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="尺寸信息"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.huafeng.client.view.ListViewForScrollView
                    android:id="@+id/lv_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:dividerHeight="0.5dp"
                    android:divider="#DFE1E6">

                </com.huafeng.client.view.ListViewForScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="材质信息"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.huafeng.client.view.ListViewForScrollView
                    android:id="@+id/lv_raw"
                    android:dividerHeight="0.5dp"
                    android:divider="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                </com.huafeng.client.view.ListViewForScrollView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="其他"
                    android:textColor="@color/color_333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rl_wash"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">

                    <TextView


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="洗水工艺"
                        android:textColor="@color/color_333"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_wash"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />

                    </LinearLayout>


                </RelativeLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DFE1E6"></View>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="备注"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <TextView
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/tv_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|end"
                        android:padding="10dp"
                        android:text=""
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout

            android:gravity="center_vertical"
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_create"
                android:textSize="14sp"
                android:gravity="center"
                android:text="录入样版库"
                android:textColor="@color/white"
                android:background="@drawable/ease_btn_blue_selector"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_copy"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:text="复版"
                android:background="@drawable/ease_btn_blue_selector"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>