<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.client.BasicFragment">

    <RelativeLayout
        android:padding="30dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head"
            android:src="@drawable/ic_deault_head"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
             android:layout_above="@id/tv_edit"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"

                    android:textColor="@color/color_333"
                    android:text="客户姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_name"
                    android:textColor="@color/color_999"
                    android:text="李白"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item1"
                    android:textColor="@color/color_333"
                    android:text="联系电话"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/tv_item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:maxLength="23"
                        android:id="@+id/tv_phone"
                        android:textColor="@color/color_999"
                        android:text="13202908144"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>

            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item3"
                    android:textColor="@color/color_333"
                    android:text="地区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_item3"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="35dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_city"
                    android:textColor="@color/color_999"
                    android:text="广东省"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item4"
                    android:textColor="@color/color_333"
                    android:text="联系地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:maxLines="2"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_item4"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_addr1"
                    android:textColor="@color/color_999"
                    android:text="工作室1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:id="@+id/rl_addr"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item5"
                    android:textColor="@color/color_333"
                    android:text="收货地址"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv_item5"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_addr2"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:gravity="right|center_vertical"
                        android:layout_marginRight="5dp"
                        android:textColor="#999"
                        android:textSize="14sp"
                        android:text="广东省"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>

            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"

                    android:textColor="@color/color_333"
                    android:text="负责人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_man"
                    android:textColor="@color/color_999"
                    android:text="赵云"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="创建时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_time"
                    android:layout_marginRight="15dp"
                    android:text="2019-09-21"
                    android:textColor="@color/color_999"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_item6"
                    android:textColor="@color/color_333"
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_item6"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_remark"
                    android:textColor="@color/color_999"
                    android:text="fdggfghhaghtht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_edit"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="编辑"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_btn_blue"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </RelativeLayout>

</LinearLayout>