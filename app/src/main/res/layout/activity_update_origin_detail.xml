<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.home.activity.client.AddCustomerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="16sp"
            android:text="资料详情"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_above="@id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_style"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item1"
                        android:textColor="@color/color_333"
                        android:text="类别"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item1"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_style"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择类型"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </LinearLayout>


                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tv_item2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="原料名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_name"
                        android:layout_toRightOf="@id/tv_item2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入名称"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_type"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="16sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item3"
                        android:textColor="@color/color_333"
                        android:text="采购类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item3"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_type"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="产前采购"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>


                <TextView
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_333"
                    android:text="上传图片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.huafeng.client.view.selectimage.EvaluationChoiceImageView
                    android:id="@+id/addimgs"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </com.huafeng.client.view.selectimage.EvaluationChoiceImageView>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_above="@id/tv_add"
            android:id="@+id/view"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <TextView
            android:id="@+id/tv_add"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#2D5FE1"
            android:textSize="16sp"
            android:text="修改"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </RelativeLayout>
</LinearLayout>