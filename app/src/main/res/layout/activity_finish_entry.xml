<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.origin.CheckStorageActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="成品入库"
            android:textColor="#333333"
            android:textSize="16sp" />



    </RelativeLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#DFE1E6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_above="@id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="洗水数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_item2"
                        android:layout_toRightOf="@id/tv_item2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:inputType="number"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="返修数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_item3"
                        android:layout_toRightOf="@id/tv_item3"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:inputType="number"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="车间数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_item4"
                        android:layout_toRightOf="@id/tv_item4"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:inputType="number"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="布行数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_item5"
                        android:layout_toRightOf="@id/tv_item5"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:inputType="number"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <android.support.v7.widget.RecyclerView
                    tools:itemCount="3"
                    android:id="@+id/rv_check"
                    tools:listitem="@layout/item_check_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:visibility="gone"
                    android:id="@+id/et_des"
                    android:layout_margin="15dp"
                    android:textColorHint="#9999"
                    android:textSize="14sp"
                    android:hint="请输入原料描述"
                    android:gravity="left"
                    android:padding="15dp"
                    android:background="@drawable/bg_add_customer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <TextView
            android:id="@+id/tv_submit"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:background="@color/color_blue"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>

</LinearLayout>