<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.client.AddCustomerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@mipmap/back"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="16sp"
            android:text="新原料入库"
            android:layout_centerInParent="true"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_above="@id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_above="@id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_333"
                    android:text="原料资料"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/color_333"
                    android:text="图片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.huafeng.client.view.selectimage.EvaluationChoiceImageView
                    android:id="@+id/addimgs"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.huafeng.client.view.selectimage.EvaluationChoiceImageView>
                <RelativeLayout
                    android:id="@+id/rl_style"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item1"
                        android:textColor="@color/color_333"
                        android:text="原料类别"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item1"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_style"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择类型"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_clothes"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item7"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="布料码数"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_cloth"
                        android:layout_toRightOf="@id/tv_item7"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="例：2.3，3.9"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item2"
                        android:layout_centerVertical="true"
                         android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="原料名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_name"
                        android:layout_toRightOf="@id/tv_item2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入名称"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_type"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item3"
                        android:textColor="@color/color_333"
                        android:text="采购类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item3"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_type"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="产前采购"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="原料描述"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_des"
                    android:layout_margin="15dp"
                    android:textColorHint="#9999"
                    android:textSize="14sp"
                    android:hint="请输入原料描述"
                    android:gravity="left"
                    android:padding="15dp"
                    android:background="@drawable/bg_add_customer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/color_333"
                    android:text="入库信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="采购单价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_price"
                        android:inputType="phone"
                        android:layout_toRightOf="@id/tv_item4"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入单价"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:id="@+id/rl_shop"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item5"
                        android:textColor="@color/color_333"
                        android:text="供应商"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_item5"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_shop"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:gravity="right|center_vertical"
                            android:layout_marginRight="5dp"
                            android:textColor="#999"
                            android:textSize="14sp"
                            android:text="请选择供应商"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />
                        <ImageView
                            android:src="@mipmap/enter"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:textSize="14sp"
                        android:id="@+id/tv_item6"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_333"
                        android:text="数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.huafeng.client.view.CursorEditText
                        android:id="@+id/et_num"
                        android:inputType="phone"
                        android:layout_toRightOf="@id/tv_item6"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:gravity="end|center_vertical"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333"
                        android:textColorHint="#ccc"
                        android:textSize="14sp"
                        android:background="@null"
                        android:hint="请输入数量"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>
                <View
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#DFE1E6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"></View>
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333"
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_remark"
                    android:layout_margin="15dp"
                    android:textColorHint="#9999"
                    android:textSize="14sp"
                    android:hint="请输入备注"
                    android:gravity="left"
                    android:padding="15dp"
                    android:background="@drawable/bg_add_customer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_above="@id/tv_add"
            android:id="@+id/view"
            android:background="#e2e2e2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <TextView
            android:id="@+id/tv_add"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="#2D5FE1"
            android:textSize="16sp"
            android:text="提交"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </RelativeLayout>
</LinearLayout>