<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.home.activity.design.DesignDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="#333333"
            android:textSize="16sp" />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_above="@id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@color/white"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本信息"
                        android:textColor="@color/color_333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="图片"
                        android:textColor="@color/color_666"
                        android:textSize="14sp" />

                    <com.huafeng.client.view.MyGridView
                        android:id="@+id/gv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:numColumns="3"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        >

                    </com.huafeng.client.view.MyGridView>

                    <RelativeLayout
                        android:id="@+id/rl_style"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_item1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="款式"
                            android:textColor="@color/color_333"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/tv_item1"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_style"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_item3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="颜色"
                            android:textColor="@color/color_333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_color"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@id/tv_item3"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>



                    <RelativeLayout
                        android:id="@+id/rl_zhi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_item5"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="纸样编号"
                            android:textColor="@color/color_333"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/tv_item5"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_zhi"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>
                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:id="@+id/tv_item4"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="样板编号"
                            android:textColor="@color/color_333"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_item4"
                            android:id="@+id/tv_no"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />



                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:id="@+id/tv_item6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="客户"
                            android:textColor="@color/color_333"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_item6"
                            android:id="@+id/tv_client"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />



                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        >

                        <TextView
                            android:id="@+id/tv_item7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="设计师"
                            android:textColor="@color/color_333"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_item7"
                            android:id="@+id/tv_designer"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#999"
                            android:textSize="14sp" />



                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="尺寸信息"
                        android:textColor="@color/color_333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.huafeng.client.view.ListViewForScrollView
                        android:id="@+id/lv_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:dividerHeight="0.5dp"
                        android:divider="#DFE1E6">

                    </com.huafeng.client.view.ListViewForScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="材质信息"
                        android:textColor="@color/color_333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.huafeng.client.view.MyGridView
                        android:id="@+id/gv_raw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="10dp"
                        android:layout_marginTop="10dp"
                        android:numColumns="2"
                        >

                    </com.huafeng.client.view.MyGridView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="其他"
                        android:textColor="@color/color_333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_wash"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="洗水工艺"
                            android:textColor="@color/color_333"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_wash"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="备注"
                            android:textColor="@color/color_333"
                            android:textSize="16sp" />

                        <TextView
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_marginLeft="40dp"
                            android:id="@+id/tv_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right|end"
                            android:padding="10dp"
                            android:text=""
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View

                android:background="#DFE1E6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <TextView
                android:id="@+id/tv_see"
                android:textColor="#2D5FE1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="查看工序安排"
                android:layout_width="match_parent"
                android:layout_height="48dp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>