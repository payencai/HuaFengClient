<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.activity.buy.WaitBuyDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textColor="#333333"
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f6f6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="基本内容"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:text="请购单号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_reqest"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="201906141120019222"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:text="请购人"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="小李"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:text="关联订单号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_order"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="201906130955067004"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="关联生产单号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_produce"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="201906141120019222"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="款号"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="23434"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请购时间"
                            android:textColor="@color/color_333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="2019-06-14 11:20:08"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请购内容"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:text="请购项"
                            android:textColor="@color/color_333"
                            android:textSize="13sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:text="待采购数量"
                            android:textColor="@color/color_333"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:text="请购数量"
                            android:textColor="@color/color_333"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <com.huafeng.client.view.MyListView
                        android:id="@+id/lv_ask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/white"
                        tools:listitem="@layout/item_ask_detail">

                    </com.huafeng.client.view.MyListView>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:id="@+id/rl_size"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/tv_item2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="付款方式"
                            android:textColor="@color/color_333"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"

                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@id/tv_item2"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_pay"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:ellipsize="end"
                                android:gravity="right|center_vertical"
                                android:singleLine="true"
                                android:text="采购人垫付"
                                android:textColor="#999"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#DFE1E6"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:text="备注"
                            android:textColor="@color/color_333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="15dp"
                            android:text="ggggg"
                            android:textColor="@color/color_999"
                            android:textSize="16sp" />

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                   android:visibility="gone"
                    android:background="@color/white"
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:id="@+id/tv_refuse"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_refuse"
                        android:gravity="center"
                        android:text="拒绝"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginRight="30dp"
                        android:id="@+id/tv_agree"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_green_login"
                        android:gravity="center"
                        android:text="通过"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


    </RelativeLayout>


</LinearLayout>